<div class="row bg-light bg-white">
  <div class="col-12 col-md-3">
    <img class="img-fluid" src="{{user.image}}">
  </div>
  <div class="col-12 col-md-9">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
    <p><strong>{{commentAmount}}</strong> 則已評論餐廳</p>
    {{#ifEquals currentUser user.id}}
      <a href="{{user.id}}/edit" class="btn btn-primary">edit</a>
    {{/ifEquals}}
  </div>
</div>
<div class="col-12 mt-4">
  <div class="card-header">
    Featured
  </div>
  <div class="card-body bg-white">
    {{#each commentedRestaurant}}
      <a href="../restaurants/{{this.id}}"><img src="{{this.image}}" style="width:50px; length: 50px;"></a>
    {{/each}}
  </div>
</div>