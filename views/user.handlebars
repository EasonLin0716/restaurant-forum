<div class="row">
  <div class="col-12 col-md-3">
    <img class="img-fluid" src="{{user.image}}">
  </div>
  <div class="col-12 col-md-9">
    <h1>{{user.name}}</h1>
    <p>{{user.email}}</p>
    {{#ifEquals currentUser user.id}}
      <a href="{{user.id}}/edit" class="btn btn-primary">edit</a>
    {{/ifEquals}}
  </div>
</div>